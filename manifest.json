{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	// 插件的名称
	"name": "宝贝助手",
	// 插件的版本
	"version": "0.0.1",
	// 设置CSP
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://s96.cnzz.com/ https://c.cnzz.com; object-src 'self'",
	// 设置插件更新地址
	"update_url": "http://gitlab.alibaba-inc.com/alitrip_wireless_qa/zzx-plugin/raw/master/updates.xml",
	// 插件描述
	"description": "__MSG_pluginDesc__",
	// 图标，一般偷懒全部用一个尺寸的也没问题
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	// 会一直常驻的后台JS或后台页面
	"background":
	{
		// 2种指定方式，如果指定JS，那么会自动生成一个背景页
		"page": "background.html"
		// "scripts": ["js/background.js"]
	},
	// 浏览器右上角图标设置，browser_action、page_action、app必须三选一
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		// 图标悬停时的标题，可选
		"default_title": "宝贝助手",
		"default_popup": "popup.html"
	},
	// 当某些特定页面打开才显示的图标
	/*"page_action":
	{
		"default_icon": "img/icon.png",
		"default_title": "我是pageAction",
		"default_popup": "popup.html"
	},*/
	// 需要直接注入页面的JS
	"content_scripts": 
	[
		// 搜索页面JS注入配置
		{
			"matches": ["http://*.taobao.com/*", "https://*.taobao.com/*"],
			// 多个JS按顺序注入
			"js": ["js/lib/jquery-1.8.3.js", "js/lib/underscore.js" , "js/item/content-script.js"],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
			"run_at": "document_start"
		},
		// 这里仅仅是为了演示content-script可以配置多个规则
		{
			"matches": ["*://*/*.png", "*://*/*.jpg", "*://*/*.gif", "*://*/*.bmp"],
			"js": ["js/show-image-content-size.js"]
		}
	],
	// 权限申请
	"permissions":
	[
		"contextMenus", // 右键菜单
		"tabs", // 标签
		"notifications", // 通知
		"webRequest", // web请求
		"webRequestBlocking", // 阻塞式web请求
		"storage", // 插件本地存储
		"http://*/*", // 可以通过executeScript或者insertCSS访问的网站
		"https://*/*", // 可以通过executeScript或者insertCSS访问的网站
		"unlimitedStorage"
	],
	// 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
	"web_accessible_resources": [
		// "js/inject.js"
		// "js/mock/xmlhttp.js", 
		// "js/mock/ajax-hook.js", 
		// "js/mock/mtop-hook.js", 
		// "js/mock/mtop-blob-init.js",
		// "js/mock/mock.json"
	],
	// 插件主页，这个很重要，不要浪费了这个免费广告位
	"homepage_url": "http://www.baidu.com",
	// Chrome40以前的插件配置页写法
	"options_page": "options.html",
	// Chrome40以后的插件配置页写法，如果2个都写，新版Chrome只认后面这一个
	"options_ui":
	{
		"page": "options.html",
		// 添加一些默认的样式，推荐使用
		"chrome_style": true
	},
	// 默认语言
	"default_locale": "zh_CN",
	// devtools页面入口，注意只能指向一个HTML文件，不能是JS文件
	"devtools_page": "devtools.html"
}